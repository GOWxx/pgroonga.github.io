"-- ------------------------------------------------------------\n"
"--  [                                                         +\n"
"--      [                                                     +\n"
"--          0,                                                +\n"
"--          1480432832.061276,                                +\n"
"--          0.0252687931060791                                +\n"
"--      ],                                                    +\n"
"--      [                                                     +\n"
"--          [                                                 +\n"
"--              [                                             +\n"
"--                  1                                         +\n"
"--              ],                                            +\n"
"--              [                                             +\n"
"--                  [                                         +\n"
"--                      \"_id\",                                +\n"
"--                      \"UInt32\"                              +\n"
"--                  ],                                        +\n"
"--                  [                                         +\n"
"--                      \"content\",                            +\n"
"--                      \"LongText\"                            +\n"
"--                  ],                                        +\n"
"--                  [                                         +\n"
"--                      \"ctid\",                               +\n"
"--                      \"UInt64\"                              +\n"
"--                  ]                                         +\n"
"--              ],                                            +\n"
"--              [                                             +\n"
"--                  1,                                        +\n"
"--                  \"PGroonga (PostgreSQL+Groonga) is great!\",+\n"
"--                  1                                         +\n"
"--              ]                                             +\n"
"--          ]                                                 +\n"
"--      ]                                                     +\n"
"--  ]\n"
"-- (1 row)\n"
"```"
msgstr ""

